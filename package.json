{
  "name": "theater2",
  "version": "1.0.0",
  "description": "A React SSR app about movies and series with authentication.",
  "main": "index.js",
  "scripts": {
    "start": "node build/bundle.js",
    "dev": "npm-run-all -l -p dev:*",
    "dev:start": "nodemon watch build --exec \"node build/bundle.js\"",
    "dev:build-server": "webpack --config webpack.config.server.js -w --progress",
    "dev:build-client": "webpack --config webpack.config.client.js -w --progress",
    "build": "rimraf build public && webpack --config webpack.config.prod.server.js -p && webpack --config webpack.config.prod.client.js -p",
    "heroku-postbuild": "npm run build"
  },
  "author": "Claudio Lapertosa",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "connect-redis": "^3.4.0",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "knex": "^0.15.2",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.5.0",
    "query-string": "^6.2.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-paginate": "^5.2.4",
    "react-redux": "^5.0.7",
    "react-router-config": "^4.4.0-beta.1",
    "react-router-dom": "^4.4.0-beta.1",
    "react-slick": "^0.23.2",
    "redis": "^2.8.0",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^1.5.0",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.1.5",
    "babel-loader": "^8.0.4",
    "compression-webpack-plugin": "^2.0.0",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "mini-css-extract-plugin": "^0.4.3",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  }
}
